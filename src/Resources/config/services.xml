<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="SyAgeRestriction\Core\Checkout\Customer\Validation\AgeRestrictionValidator">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="tagged" tag="validator.constraint_validator"/>
        </service>
        
        <service id="SyAgeRestriction\Subscriber\RegisterRouteSubscriber">
            <argument type="service" id="SyAgeRestriction\Core\Checkout\Customer\Validation\AgeRestrictionValidator"/>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>